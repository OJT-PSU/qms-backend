generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum QueueStatus {
  waiting
  ongoing
  accommodated
}

enum TerminalStatus {
  active
  inactive
}

enum transactionType {
  checkReleasing
  payment
  inquiry
}


model Queue {
  queueId Int @default(autoincrement()) @id
  name String
  email String?
  contactNumber String?
  transactionType transactionType 
  queueStatus QueueStatus @default(waiting)
  createdAt DateTime @default(now())
  terminal String?
  toDisplay Int @default(0)
}

model Terminal {
  terminalId Int @default(autoincrement()) @id
  transactionType transactionType
  terminalName String
  remarks String
  status TerminalStatus 
}

model Display {
  displayId  Int @default(autoincrement()) @id
  dispMsg String @db.VarChar(10000) 
  video String 
  scrollTime String
  themeType Int @default(0)
}

